<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="75dp">
    android:gravity="center|center_vertical|center_horizontal">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@mipmap/icon_64x64"></ImageView>

    <TextView
        android:id="@+id/label_main_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icon"
        android:minHeight="40dp"
        android:textColor="#5564bc"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/label_main_info"
        android:layout_alignStart="@+id/label_main_info"
        android:layout_below="@+id/label_main_info"
        android:minHeight="5dp"
        android:text=" "
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold"></TextView>

</RelativeLayout>